<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hbv.com.ua.repository.mybatis.UserRepository">


    <resultMap id="usersList" type="hbv.com.ua.model.User">
        <id column="id" property="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="phone" column="phone"/>
        <result property="isEnabled" column="is_enabled"/>
        <result property="isAccountNonLocked" column="is_account_non_locked"/>
        <result property="isAccountNonExpired" column="is_account_non_expired"/>
        <result property="isCredentialsNonExpired" column="is_credentials_non_expired"/>
    </resultMap>

    <insert id="create" parameterType="hbv.com.ua.model.User" statementType="PREPARED">
        insert into users (username, password, first_name, last_name, phone,is_enabled, is_account_non_locked, is_account_non_expired,is_credentials_non_expired)
            values (#{username},#{password}, #{firstName}, #{lastName}, #{phone}, #{isEnabled}, #{isAccountNonLocked}, #{isAccountNonExpired}, #{isCredentialsNonExpired});
    </insert>

    <select id="read" parameterType="java.lang.Long" statementType="PREPARED">
        select *
        from users
        where id = #{id}
    </select>

    <select id="readAll" statementType="PREPARED" resultMap="usersList" resultType="java.util.List">
        select * from users;
    </select>

    <select id="findByUsername" parameterType="java.lang.String" statementType="PREPARED">
        select *
        from users
        where username = #{username}
    </select>

</mapper>
